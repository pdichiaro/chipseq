/*
 * -------------------------------------------------
 *  Notification Configuration
 * -------------------------------------------------
 * Configuration file for pipeline notifications
 * including email and webhook settings.
 */

params {
    // Email notifications
    email              = null
    email_on_fail      = null
    plaintext_email    = false
    
    // Webhook notifications (Slack/Teams)
    hook_url           = null
    
    /*
     * Uncomment and configure the notification method(s) you want to use:
     */
    
    // ====================================
    // Email Configuration Examples
    // ====================================
    
    // Send email on successful completion
    // email = 'your.email@example.com'
    
    // Send email only on failure
    // email_on_fail = 'alerts@example.com'
    
    // Use plain text email instead of HTML
    // plaintext_email = true
    
    
    // ====================================
    // Slack Webhook Configuration
    // ====================================
    
    // Slack production channel
    // hook_url = 'https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXX'
    
    // Slack development channel
    // hook_url = 'https://hooks.slack.com/services/T00000000/B11111111/YYYYYYYYYYYYYYYYYYYY'
    
    
    // ====================================
    // Microsoft Teams Webhook Configuration
    // ====================================
    
    // Teams production channel
    // hook_url = 'https://yourcompany.webhook.office.com/webhookb2/XXXXXX/IncomingWebhook/YYYYYY/ZZZZZZ'
    
    // Teams development channel
    // hook_url = 'https://yourcompany.webhook.office.com/webhookb2/AAAAAA/IncomingWebhook/BBBBBB/CCCCCC'
    
    
    // ====================================
    // Environment Variable Configuration
    // ====================================
    
    // You can also use environment variables for security:
    // hook_url = System.getenv('PIPELINE_WEBHOOK_URL')
    
    
    // ====================================
    // Combined Notifications Example
    // ====================================
    
    // Use both email and webhook for redundancy
    // email         = 'team@example.com'
    // email_on_fail = 'urgent@example.com'
    // hook_url      = 'https://hooks.slack.com/services/YOUR/WEBHOOK/URL'
}

/*
 * -------------------------------------------------
 *  Usage
 * -------------------------------------------------
 * 
 * Include this config file when running the pipeline:
 * 
 *   nextflow run main.nf -c conf/notifications.config --input samplesheet.csv
 * 
 * Or create separate config files for different environments:
 * 
 *   conf/notifications_prod.config    # Production settings
 *   conf/notifications_dev.config     # Development settings
 * 
 * Then run with the appropriate config:
 * 
 *   nextflow run main.nf -c conf/notifications_prod.config --input samplesheet.csv
 * 
 * -------------------------------------------------
 *  Setting up Webhooks
 * -------------------------------------------------
 * 
 * SLACK:
 * 1. Go to https://api.slack.com/apps
 * 2. Create a new app or select existing
 * 3. Enable "Incoming Webhooks"
 * 4. Click "Add New Webhook to Workspace"
 * 5. Select the channel and copy the webhook URL
 * 6. Paste the URL in this config file
 * 
 * MICROSOFT TEAMS:
 * 1. Open the Teams channel you want to receive notifications
 * 2. Click "..." (More options) â†’ "Connectors"
 * 3. Search for "Incoming Webhook" and click "Configure"
 * 4. Provide a name and optionally upload an image
 * 5. Copy the webhook URL
 * 6. Paste the URL in this config file
 * 
 * -------------------------------------------------
 *  Testing
 * -------------------------------------------------
 * 
 * Test your webhook before running the pipeline:
 * 
 *   ./test_webhook.sh 'https://hooks.slack.com/services/YOUR/WEBHOOK/URL'
 * 
 * -------------------------------------------------
 *  Security Best Practices
 * -------------------------------------------------
 * 
 * 1. DO NOT commit webhook URLs to version control
 * 2. Use environment variables for sensitive URLs
 * 3. Restrict webhook channel membership
 * 4. Use separate webhooks for prod/dev environments
 * 5. Rotate webhook URLs periodically
 * 6. Consider using .gitignore for local config files:
 * 
 *    # .gitignore
 *    conf/notifications_local.config
 *    conf/*_secrets.config
 * 
 */
